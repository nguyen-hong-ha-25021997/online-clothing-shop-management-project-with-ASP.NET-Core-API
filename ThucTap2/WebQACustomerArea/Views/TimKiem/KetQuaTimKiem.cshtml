@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<WebQACustomerArea.Models.Product>

@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Layout/_TimKiemLayout.cshtml";
}

<div class="well well-small">
    <p><h3>Kết quả tìm kiếm </h3></p>
    <hr class="soften" />
    <div class="row-fluid">
        <div id="newProductCar" class="carousel slide">

            <div class="carousel-inner">
                <div class="item active">
                    <ul class="thumbnails">


                        @foreach (var item in Model)
                        {


                            <li class="span3">
                                <div class="thumbnail">
                                    <a class="zoomTool" href="@Url.Action("XemChiTietSanPham","Home", new { @MaSanPham = item.Product_Id})"><span class="icon-search"></span> QUICK VIEW</a>

                                    <a href="#" class="tag"></a>
                                    <a href="product_details.html"><img src="@Url.Content("~/Images/"+item.Product_Image)" /></a>
                                    <p>@item.Product_Name</p>
                                    <p>@item.Product_Show</p>
                                    <p> <b>@item.Product_Price VNĐ</b></p>

                                </div>
                            </li>
                        }
                    </ul>

                </div>
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", new { @page = page, @tukhoa = ViewBag.TuKhoa }))
            </div>
