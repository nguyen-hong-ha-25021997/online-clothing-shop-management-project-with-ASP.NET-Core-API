@using WebQACustomerArea.Models;
@model  Product

@{
    ViewBag.Title = "Xem chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center text-primary mt-3">Chi tiết sản phẩm</h1>
<div class="container mt-3">
    <div class="row">
        <div class="card col-md-4">
            <img src="@Url.Content("~/Images/" + Model.Product_Image)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title text-center">Ảnh sản phẩm <span class="text-info">@Model.Product_Show</span> </h5>
            </div>
            <div class="container">
                <p> Giá thành: <b class="text-danger">@Model.Product_Price VNĐ</b></p>
                <p> Size: <b>@Model.Product_Size</b></p>
                <p>Ghi chú: <b class="text-warning">@Model.Product_Note</b></p>
            </div>
            
            <div class="card-body">
                <a href="@Url.Action("themgiohang", "GioHang", new { @masp = Model.Product_Id, @url = Request.Url.ToString() })" class="btn btn-danger"><i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng</a>
                <a href="@Url.Action("TrangChu","Home")" class="card-link"><i class="fa-solid fa-arrow-right"></i> Sản phẩm khác</a>
            </div>
        </div>

        <div class="card col-md-8">
            <div class="container mt-3">
                <h2 class="text-center">Thông tin sản phẩm</h2>
            </div>
            <hr class="soften mt-2 mb-2" />
            <p>Đây là thông tin chi tiết về sản phẩm</p>
        </div>
    </div>
    
</div>

